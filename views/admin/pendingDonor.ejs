<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Donor Management</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="min-h-screen">
    <% include ../partial/admin_drawer %>
    <h1 class="text-2xl text-center font-bold my-5">Donor Registration Form</h1>
    <div class="grid lg:grid-cols-3 md:grid-cols-1 sm:grid-cols-1">
      <div></div>
      <div class="card glass w-full">
        <div class="card-body">
          <form action="/admin/pendingDonorAdd" method="post" id="frm">
            <label class="input input-bordered flex items-center gap-2 my-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z"
                />
              </svg>
              <input
                type="text"
                name="name"
                class="grow"
                placeholder="Name"
                id="name"
              />
            </label>
            <label class="input input-bordered flex items-center gap-2 my-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
                />
                <path
                  d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
                />
              </svg>
              <input
                type="email"
                name="email"
                id="email"
                class="grow"
                placeholder="Email"
              />
            </label>

            <label class="input input-bordered flex items-center gap-2 my-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  fill-rule="evenodd"
                  d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                  clip-rule="evenodd"
                />
              </svg>
              <input
                type="password"
                name="password"
                class="grow"
                id="password"
                placeholder="password"
              />
            </label>

            <button type="button" class="btn btn-primary btn-block my-2">
              Register
            </button>
          </form>
        </div>
      </div>
    </div>
    <h1 class="text-2xl text-center font-bold my-5">Pending Donor List</h1>
    <div class="grid lg:grid-cols-6 md:grid-cols-1 sm:grid-cols-1">
      <div></div>
      <div class="overflow-x-auto col-span-4">
        <table id="example" class="display table my-3" style="width: 100%">
          <!-- head -->
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <!-- row 1 -->
            <tr>
              <th>1</th>
              <td>Mg Moe</td>
              <td>moe@gmail.com</td>
              <td>
                <button
                  onclick="my_modal_2.showModal()"
                  class="btn btn-warning btn-sm"
                >
                  Update
                </button>
                <button class="btn btn-error btn-sm">Delete</button>
              </td>
            </tr>
            <!-- row 2 -->
            <tr>
              <th>2</th>
              <td>Mg Toe</td>
              <td>toe@gmail.com</td>
              <td>
                <button
                  onclick="my_modal_2.showModal()"
                  class="btn btn-warning btn-sm"
                >
                  Update
                </button>
                <button class="btn btn-error btn-sm">Delete</button>
              </td>
            </tr>
            <!-- row 3 -->
            <tr>
              <th>3</th>
              <td>Mg Poe</td>
              <td>poe@gmail.com</td>
              <td>
                <button
                  onclick="my_modal_2.showModal()"
                  class="btn btn-warning btn-sm"
                >
                  Update
                </button>
                <button class="btn btn-error btn-sm">Delete</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <dialog id="my_modal_2" class="modal">
      <div class="modal-box">
        <h3 class="text-lg font-bold">Pending Donor Update Form</h3>
        <form action="/admin/pendingDonorUpdate" method="post" id="frm">
          <label class="input input-bordered flex items-center gap-2 my-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 16 16"
              fill="currentColor"
              class="h-4 w-4 opacity-70"
            >
              <path
                d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z"
              />
            </svg>
            <input
              type="text"
              name="name"
              class="grow"
              value="Mg Moe"
              id="name"
            />
          </label>
          <label class="input input-bordered flex items-center gap-2 my-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 16 16"
              fill="currentColor"
              class="h-4 w-4 opacity-70"
            >
              <path
                d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
              />
              <path
                d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
              />
            </svg>
            <input
              type="email"
              name="email"
              id="email"
              class="grow"
              value="moe@gmail.com"
              readonly
            />
          </label>

          <label class="input input-bordered flex items-center gap-2 my-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 16 16"
              fill="currentColor"
              class="h-4 w-4 opacity-70"
            >
              <path
                fill-rule="evenodd"
                d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                clip-rule="evenodd"
              />
            </svg>
            <input
              type="password"
              name="password"
              class="grow"
              id="password"
              placeholder="password"
            />
          </label>

          <button type="button" class="btn btn-primary btn-block my-2">
            Update
          </button>
        </form>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button>close</button>
      </form>
    </dialog>
  </body>
</html>
